<project name="AlarmHMI" default="build" basedir=".">
	
	<property environment="env"/>
	
	<condition property="rtiddsgen.path" value="rtiddsgen.bat">
		<os family="windows"/>
	</condition>
	<condition property="rtiddsgen.path" value="rtiddsgen">
		<os family="unix"/>
	</condition>

	<fail unless="rtiddsgen.path">No rtiddsgen path set for OS!</fail>
	
	<target name="build">
		<exec executable="${env.NDDSHOME}/scripts/${rtiddsgen.path}" dir="../Idl">
			<arg value="-replace"/>
			<arg value="-namespace"/>
			<arg value="-d"/>
			<arg value="../HMI/src"/>
			<arg value="-language"/>
			<arg value="Java"/>
			<arg value="alarm.idl"/>
		</exec>
		<exec executable="${env.NDDSHOME}/scripts/${rtiddsgen.path}" dir="../Idl">
			<arg value="-replace"/>
			<arg value="-namespace"/>
			<arg value="-d"/>
			<arg value="../HMI/src"/>
			<arg value="-language"/>
			<arg value="Java"/>
			<arg value="../Idl/ice.idl"/>
		</exec>
		<exec executable="${env.NDDSHOME}/scripts/${rtiddsgen.path}" dir="../Idl">
			<arg value="-replace"/>
			<arg value="-namespace"/>
			<arg value="-d"/>
			<arg value="../HMI/src"/>
			<arg value="-language"/>
			<arg value="Java"/>
			<arg value="../Idl/patient.idl"/>
		</exec>
		<exec executable="${env.NDDSHOME}/scripts/${rtiddsgen.path}" dir="../Idl">
			<arg value="-replace"/>
			<arg value="-namespace"/>
			<arg value="-d"/>
			<arg value="../HMI/src"/>
			<arg value="-language"/>
			<arg value="Java"/>
			<arg value="../Idl/profiles.idl"/>
		</exec>
	</target>
	<target name="compile">
		<mkdir dir="../HMI/bin"/>
		<javac srcdir="../HMI/src" destdir="../HMI/bin">
			<classpath>
				<fileset dir="${env.NDDSHOME}/class/" id="id">
			    	<include name="nddsjava.jar"/>
				</fileset>
			</classpath>
		</javac>
	</target>
</project>